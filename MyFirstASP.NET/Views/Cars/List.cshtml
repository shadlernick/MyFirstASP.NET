
<h2>Все автомобили</h2>
<h3>@Model.CurrCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var car in Model.GetAllCars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.Img" alt="@car.Name"/>
                <h2>Модель: @car.Name</h2>
                <h3>@car.ShortDesc</h3>
                <p>Цена: @car.Price.ToString("c")</p>
                <p><a class="btn btn warning" href="#">Подробно</a></p>
            </div>
        }
    }
</div>

